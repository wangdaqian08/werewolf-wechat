
/* index.wxss */
.vote-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #1a1a2e;
  padding: 20px;
}

.header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}

.round-info, .vote-round {
  color: #ffffff;
  font-size: 18px;
  font-weight: bold;
}

.vote-status {
  background-color: #2a2a3e;
  border-radius: 15px;
  padding: 15px;
  margin-bottom: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.status-text {
  color: #ffffff;
  font-size: 18px;
  margin-bottom: 10px;
}

.timer {
  color: #e94560;
  font-size: 16px;
  font-weight: bold;
}

.players-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15px;
  margin-bottom: 20px;
  flex: 1;
  overflow-y: auto;
}

.player-card {
  background-color: #2a2a3e;
  border-radius: 10px;
  padding: 15px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.player-card.selected {
  background-color: rgba(233, 69, 96, 0.3);
  border: 2px solid #e94560;
}

.player-avatar {
  width: 50px;
  height: 50px;
  background-color: #3a3a4e;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10px;
}

.player-number {
  color: #ffffff;
  font-size: 20px;
  font-weight: bold;
}

.player-name {
  color: #ffffff;
  font-size: 14px;
  text-align: center;
}

.vote-results {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-bottom: 20px;
}

.result-summary {
  background-color: #2a2a3e;
  border-radius: 15px;
  padding: 15px;
  margin-bottom: 20px;
}

.eliminated-text, .tie-text {
  color: #ffffff;
  font-size: 16px;
  margin-bottom: 15px;
  display: block;
}

.tie-text {
  color: #e94560;
  text-align: center;
  font-weight: bold;
}

.eliminated-player {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.eliminated-avatar {
  width: 40px;
  height: 40px;
  background-color: #e94560;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 10px;
}

.eliminated-number {
  color: #ffffff;
  font-size: 18px;
  font-weight: bold;
}

.eliminated-name {
  color: #ffffff;
  font-size: 16px;
  margin-right: 5px;
}

.eliminated-votes {
  color: #e94560;
  font-size: 14px;
}

.vote-details {
  background-color: #2a2a3e;
  border-radius: 15px;
  padding: 15px;
  flex: 1;
  overflow-y: auto;
}

.details-title {
  color: #ffffff;
  font-size: 16px;
  margin-bottom: 15px;
  display: block;
}

.vote-detail-item {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}

.voter-info, .votee-info {
  display: flex;
  align-items: center;
}

.voter-avatar, .votee-avatar {
  width: 30px;
  height: 30px;
  background-color: #3a3a4e;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 8px;
}

.voter-number, .votee-number {
  color: #ffffff;
  font-size: 14px;
  font-weight: bold;
}

.voter-name, .votee-name {
  color: #ffffff;
  font-size: 14px;
}

.vote-arrow {
  color: #e94560;
  font-size: 20px;
  margin: 0 10px;
}

.action-buttons {
  margin-top: auto;
}

.vote-button, .continue-button {
  background-color: #e94560;
  color: white;
  font-size: 16px;
  font-weight: bold;
  padding: 12px 0;
  border-radius: 30px;
  width: 100%;
}

.vote-button:disabled {
  opacity: 0.5;
}